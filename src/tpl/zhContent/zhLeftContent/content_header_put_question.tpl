<div class="question-describe-hold">
	<div class="question-describe-item">
		<textarea name="" id="question-topic"  rows="3" placeholder="问题标题"></textarea>
	</div>
	<div class="question-describe-item">
		<input type="text" placeholder="添加话题" class="add-topic">
		<img src="/assets/images/index/putQuestion/topic_search.png" alt="">
	</div>
	<div class="question-describe-item">
		<div class="question-describe-detail-title clearfix">
			<div class="left-text">问题描述（可选）：</div>
			<div class="right-question-describe-operate clearfix">
				<div class="right-operate-item describe-bolder"></div>
				<div class="right-operate-item insert-img">
					<input type="file" class="insert-img-input">
				</div>
				<div class="right-operate-item insert-video">
					<input type="file" class="insert-video-input">
				</div>
			</div>
		</div>
		<textarea name="" id="question-describe-detail"  rows="4" placeholder="问题背景、条件等详细信息"></textarea>
	</div>
	<div class="question-describe-item">
		<input type="checkbox">
		<span class="anonymous">匿名提问</span>
	</div>
</div>
